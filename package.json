    "url": "git+https://github.com/itswagi/renotion.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/index.js",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
